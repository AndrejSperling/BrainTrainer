@media screen and (min-width: 1145px)
  .fixed.main.menu
    display: none;

@media screen and (max-width: 1144px)
  .full.height > .toc {
    display none
  }

  #content.container > .rail {
    display none
  }

  #content {
    margin-right: 3em !important;
  }

@media screen and (max-width: 1272px)
  .full.height > .toc {
    width 200px
  }

