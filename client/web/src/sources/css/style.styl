$mobileBreakpoint = 320px
$tabletBreakpoint = 768px
$computerBreakpoint = 992px
$largeMonitorBreakpoint = 1200px
$wideScreenMonitorBreakpoint = 1920px
$sidebarWidth = 210px

$mobileSpace = 25px;
$tabletSpace = 25px;
$computerSpace = 25px;

body {
  padding: 0px
}

#app .toc {
  position: relative;
  z-index: 1;
  width: $sidebarWidth;
  -webkit-box-flex: 0;
  -webkit-flex: 0 0 auto;
  -ms-flex: 0 0 auto;
  float: left;
  flex: 0 0 auto;
}

.pusher > .full.height {
  background-color: #FFFFFF;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-flex-direction: row;
  -ms-flex-direction: row;
  flex-direction: row;
}

.full.height {

  min-width: $mobileBreakpoint;
  width: auto !important;

  & > .toc {
    position: relative;
    z-index: 1;
    background-color: #ffffff;
    width: 200px;
    -webkit-box-flex: 0;
    -webkit-flex: 0 0 auto;
    -ms-flex: 0 0 auto;
    flex: 0 0 auto;
  }

}

#main-container {
  -webkit-box-flex: 1
  -webkit-flex: 1 1 auto
  -ms-flex: 1 1 auto
  flex: 1 1 auto
  min-width: 0

  .ui.right.dividing.rail {
    border-left: none
  }

}

#main-menu {

  .ui.vertical.menu {
    width 14rem
  }

  .menu {
    padding: 25px !important

    .item {
      font-size: 16px !important
    }
  }

  .logo {
    text-align: left;
    padding: 0 0 0 15px;
  }

}

.content-row {

  position: relative;

  .container::after {
    content: '';
    display: block;
    height: 0;
    clear: both;
    visibility: hidden;
  }

  &.container {

    margin-left: 3em !important;
    width: auto !important;
  //max-width: 960px !important;
    margin-right: 268px !important;

    & > .right.rail,
    & > .tab > .examples > .right.rail,
    & > .tab > .right.rail {
      margin-left: 3em;
      padding-top: 2em;
      width: 200px;
    }
  }
}

#masthead {

  @media screen and (max-width: 1144px) {
    & {
      margin-top: 3em
      margin-right: 120px !important;
    }

    & > .rail {
      width 80px
      margin-left 0 !important
      padding-left 0 !important
    }
  }

  #masthead-right {
    padding-top: 0 !important;

    .alarm-icon {
      padding-bottom: 15px;

      .icon {
        font-size: 18px;
      }
    }

    .avatar {
      height: 32px;
      width: 32px;
      max-height: none;
    }
  }

  #masthead-left {

  }

}

#content-right {
  //margin-left 0 !important;
  padding-left 0 !important

  .new-set-btn{
    display block
    width 100%
  }
}

.border-less {
  border: none !important;
  border-width: 0 0 0 0 !important;
  border-radius: 0 !important;
  box-shadow: none !important;
}

